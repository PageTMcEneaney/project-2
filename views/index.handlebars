    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container d-flex justify-content-between">
            <a class="navbar-title" href="/">just duet</a>
            <div class="d-flex align-items-center">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
                aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
            <div class="float-right">
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav ml-4">
                        <a class="nav-item nav-link active" href="/">Home <span class="sr-only">(current)</span></a>
                        <a class="nav-item nav-link" id="creatorsBtn" href="/creators">Creators</a>
                        <a class="nav-item nav-link" id="mapsBtn" href="/maps">Local Karaoke</a>
                        {{!-- PROFILE BUTTON DISABLED UNTIL LOGGED IN --}}
                        <a class="nav-item nav-link disabled" href="/profile">Profile</a>
                        <button type="button" class="help btn btn-primary" data-toggle="modal"
                            data-target="#loginModalScrollable" id="loginButton">Log In</button>
                        <button class="btn btn-primary d-none" id="logout">Log Out</button>
                    </div>
                </div>
            </div>
            </div>
        </div>
    </nav>
    <div class="container" id="indexBody">
        <div class="row header">
            <h1 class="headerTitle">just duet</h1>
        </div>
        <!-- Search -->
        <div class="row">
            <div class="col-8 offset-2">
                {{!-- <h1>{{msg}}</h1> --}}
                {{!-- <h2>This is our Home Page!</h2> --}}
                <form class="clearfix mb-4" action="POST">
                    <div class="form-group">
                        {{!-- <label for="example-text">Example Text</label> --}}
                        <input type="text" id="example-text" class="form-control" aria-describedby="example-text"
                            placeholder="Search">
                    </div>
                    <div class="dropdown">
                        <button class="srchType btn btn-secondary dropdown-toggle" type="button" id="dropdownSearch"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Search Type
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownSearch">
                            <a class="dropdown-item" href="#" id="ddArtist">Artist</a>
                            <a class="dropdown-item" href="#" id="ddTrack">Track</a>
                            <a class="dropdown-item" href="#" id="ddGenre">Genre</a>
                            <a class="dropdown-item" href="#" id="ddYear">Year</a>
                            <a class="dropdown-item" href="#" id="ddAlbum">Album</a>
                            <a class="dropdown-item" href="#" id="ddLyrics">Lyrics</a>
                        </div>
                        <button id="submit" class="submit btn btn-primary float-right" disabled>Submit</button>
                    </div>
                </form>
            </div>
            <div class="col-2 px-1">
                <button type="button" class="help btn btn-primary" id="help" data-toggle="modal"
                    data-target="#exampleModalScrollable">
                    ?
                </button>
                {{!-- HELP MODAL --}}
                <div class="modal fade" id="exampleModalScrollable" tabindex="-1" role="dialog"
                    aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-scrollable" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalScrollableTitle">How this works</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p class="modalText">
                                    To search for a karaoke song first select what catagory you want to search
                                    through and then in the search bar enter what you are
                                    looking for. If you don't know what to look up don't worry! Scroll down just a
                                    bit and we have some suggestions of the top hits
                                    through the years.
                                </p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
                {{!-- SIGNUP MODAL --}}
                <div class="modal" id="signupModalScrollable" tabindex="-1" role="dialog"
                    aria-labelledby="loginleModalScrollableTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-scrollable" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="signupModalScrollableTitle">Sign Up Form</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form class="signup">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Email address</label>
                                        <input type="email" class="form-control" id="signup-email-input"
                                            placeholder="Email">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Password</label>
                                        <input type="password" class="form-control" id="signup-password-input"
                                            placeholder="Password">
                                    </div>
                                    <div style="display: none" id="alert" class="alert alert-danger" role="alert">
                                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                                        <span class="sr-only">Error:</span> <span class="msg"></span>
                                    </div>
                                    <button type="submit" class="btn btn-secondary">Sign Up</button>
                                </form>
                                <br />
                                <br />
                                <p>Or log in <a href="#" data-dismiss="modal" id="modalLogin" data-toggle="modal"
                                        data-target="#loginModalScrollable">here</a></p>
                            </div>
                        </div>
                    </div>
                </div>
                {{!-- LOGIN MODAL --}}
                <div class="modal" id="loginModalScrollable" tabindex="-1" role="dialog"
                    aria-labelledby="loginleModalScrollableTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-scrollable" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="loginModalScrollableTitle">Login Form</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form class="login">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Email address</label>
                                        <input type="email" class="form-control" id="login-email-input"
                                            placeholder="Email">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Password</label>
                                        <input type="password" class="form-control" id="login-password-input"
                                            placeholder="Password">
                                    </div>
                                    <button type="submit" class="btn btn-secondary">Login</button>
                                </form>
                                <br />
                                <p>Or sign up <a href="#" data-dismiss="modal" id="modalSignup" data-toggle="modal"
                                        data-target="#signupModalScrollable">here</a></p>
                                <a href="/auth/google">Sign In with Google</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- where the search results append to -->
        <div class="row">
            <div class="results col-md-10 offset-1">
                <!-- <div class="card-body">
                        <div class="row">
                            <div class="col-9">
                                <p id="trackArtist"></p>
                            </div>
                            <div class="col-3 heart">
                                <p class="heartBtn">â™¡</p>
                            </div>
                        </div>
                    </div>  -->
            </div>
        </div>

        <!-- Suggestions -->

        <div class='row suggestions mb-5'>
            <div class="col-1"></div>
            <div class='col-md-10'>
                <h1 class='suggestionsTitle'>suggestions</h1>
                <h2 class="suggestionsHint">popular Karaoke songs by category</h2>
                <div class="accordion" id="accordionExample">

                    {{!-- HANDLEBARS ACCORDION --}}
                    {{#each topRecs}}
                        <div class="card">
                            <div class="card-header" id={{heading}}>
                                <h2 class="mb-0">
                                <button class="btn btn-block topTitle" type="button" data-toggle="collapse"
                                    data-target={{dataTarget}} aria-expanded="false" aria-controls={{id}}>
                                    {{name}}
                                </button>
                            </h2>
                        </div>
                        <div id={{id}} class="collapse" aria-labelledby={{heading}}
                            data-parent="#accordionExample">
                            <div class="card-body">
                                {{#each this.songs}}
                                    <div class="row topRow">
                                        <div class="col-9">
                                            <p class="song" value='{{this.full}}'>{{this.full}}</p>
                                        </div>
                                        <div class="col-3">
                                            <p class="heartBtn" value='{{this.full}}'><i class="far fa-heart"></i></p>
                                        </div>
                                    </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
            <div class="col-1"></div>
        </div>
    </div>
</div>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
